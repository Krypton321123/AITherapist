generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum sleepQuality {
  GOOD 
  POOR 
  FAIR 
  WORST 
  EXCELLENT
}
model User {
  user_id       String         @id @default(cuid())
  username      String         @unique
  phone_no      String 
  fullName      String 
  password      String
  goal          String?
  gender        String?
  age           Int?
  sleepQuality  String?
  medication    Boolean?
  dataComplete  Boolean
  conversations Conversation[]
}

model Conversation {
  chat_id      String   @id @default(cuid())
  userResponse String[]
  AIResponse   String[]
  userID       String
  user         User     @relation(fields: [userID], references: [user_id])
}
